<div class="row gx-4">
    <div class="col-lg-8">
    {{ form_start(form) }}
        <div class="card mb-4">
            <div class="card-header">
                Fiche Partenaire                                                            
            </div>
            <div class="card-body text-center text-muted">
                JPG or PNG no larger than 5 MB                         
                <div class="small font-italic text-muted mb-4">
                    {% if partner is defined %}
                        <img src="{{ vich_uploader_asset(partner, 'Def') }}" alt="Photo" class="img-thumbnail" width="200px" height="50%" />
                    {% else %}
                        <img class="img-account-profile mb-2" src="{{asset('back-office/assets/img/demo/user-placeholder.svg') }}" alt="" width="50%" />
                    {% endif %}
                </div>
            </div>
            <div class="card-body text-center">
                {{ form_widget(form.Def, {'attr':{'title':'' }}) }}
            </div>
            <div class="card-body">
                <div class="row gx-3 mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.Nom, ' Nom', {'label_attr':{'class':'small mb-1' }}) }}                                                          
                        {{ form_widget(form.Nom, {'attr':{'class':'form-control' }}) }}                                                 
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.Nom) }}
                    </div>
                </div>
                <button class="fw-500 btn btn-primary">
                        {{ button_label|default('Sauvegarder') }}
                </button>
            </div>
            
        </div>
    </div>
    {{ form_end(form) }}
</div>
