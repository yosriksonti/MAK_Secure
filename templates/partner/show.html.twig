{% extends "dashboard/index.html.twig" %}
{% block content %}
    <main>
        <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
            <div class="container-xl px-4">
                <div class="page-header-content">
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="col-auto mb-3">
                            <h1 class="page-header-title">
                                <div class="page-header-icon"><i data-feather="user-plus"></i></div>
                                Fiche Partenaire
                            </h1>
                        </div>
                       <div class="col-12 col-xl-auto mb-3">
                            <a class="btn btn-sm btn-light text-primary" href="{{ path('partner_index') }}">
                                <i class="me-1" data-feather="arrow-left"></i>
                                Liste des Partenaires                           
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main page content-->
        <div class="container-xl px-4 mt-4">
            <div class="row">
                <div class="col-xl-8">
                    <!-- Account details card-->
                    <div class="card mb-4">
                        <div class="card-header">Fiche Partenaire</div>
                        <div class="card-body">
                            <!-- Form Row-->
                            <div class="card-body text-center">
                                <!-- Profile picture image-->
                                <img class="img-account-profile  mb-2" src="{{ vich_uploader_asset(partner, 'Def') }}" alt="" />
                            </div>
                            <hr/>
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                <div class="col-md-12 text-center">
                                    <h3 class=" mb-1" for="inputFirstName">{{ partner.Nom }}</h3>
                                </div>
                            </div>
                            <!-- Form Group (email address)-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
