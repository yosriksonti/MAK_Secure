                    <div class="invalid-feedback">
                        {{ form_errors(form.CIN) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_label(form.Date_CIN, 'Date Livraison', {'label_attr':{'class':'small mb-1' }}) }}                                  
                        {{ form_widget(form.Date_CIN, {'attr':{'class':'form-control' }}) }}                                
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.Date_CIN) }}
                    </div>
                </div>
                <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                        {{ form_label(form.Pays, 'Pays', {'label_attr':{'class':'small mb-1' }}) }}                                  
