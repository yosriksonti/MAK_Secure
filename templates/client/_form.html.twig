                    <div class="col-md-6">
                        {{ form_label(form.Add2, 'Addresse 2', {'label_attr':{'class':'small mb-1' }}) }}                                  
                        {{ form_widget(form.Add2, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.Add2) }}
                    </div>
                </div>
                <div class="row gx-3 mb-3">
                    <div class="col-md-8">
                        {{ form_label(form.Permis, 'Permis', {'label_attr':{'class':'small mb-1' }}) }}                                  
                        {{ form_widget(form.Permis, {'attr':{'class':'form-control' }}) }}                                
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.Permis) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_label(form.Date_Permis, 'Date Livraison', {'label_attr':{'class':'small mb-1' }}) }}                                  
