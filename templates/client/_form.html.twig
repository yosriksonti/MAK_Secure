<div class="row">
    {{ form_start(form) }}
    <div class="col-xl-12">
        <div class="card mb-4">
            <div class="card-header">
                Fiche Client                                            
            </div>
            <div class="card-body">
                <div class="row gx-3 mb-3">
                    <div class="col-md-4">
                        {{ form_label(form.lastname, 'Nom', {'label_attr':{'class':'small mb-1' }}) }}                                   
                        {{ form_widget(form.lastname, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.lastname) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_label(form.name, 'Prenom', {'label_attr':{'class':'small mb-1' }}) }}                                    
