                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_label(form.Date_Naissance, 'Date de Naissance', {'label_attr':{'class':'small mb-1' }}) }}                                   
                        {{ form_widget(form.Date_Naissance, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.Date_Naissance) }}
                    </div>
                </div>
                <div class="row gx-3 mb-3">
