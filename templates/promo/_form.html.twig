<div class="row gx-4">
    <div class="col-lg-8">
    {{ form_start(form) }}
        <div class="card mb-4">
            <div class="card-header">
                Fiche Promo                                                            
            </div>
            <div class="card-body">
                <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                        {{ form_label(form.Code, ' Code', {'label_attr':{'class':'small mb-1' }}) }}                                                          
                        {{ form_widget(form.Code, {'attr':{'class':'form-control' }}) }}                                                 
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.Code) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.Pourcentage, ' Pourcentage', {'label_attr':{'class':'small mb-1' }}) }}                                                          
                        {{ form_widget(form.Pourcentage, {'attr':{'class':'form-control' }}) }}                                                 
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.Pourcentage) }}
                    </div>
                </div>
                <button class="fw-500 btn btn-primary">
                        {{ button_label|default('Sauvegarder') }}
                </button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>
