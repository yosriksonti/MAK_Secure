{% extends "dashboard/index.html.twig" %}
{% block content %}
    <main>
        <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
            <div class="container-xl px-4">
                <div class="page-header-content">
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="col-auto mb-3">
                            <h1 class="page-header-title">
                                <div class="page-header-icon"><i data-feather="user-plus"></i></div>
                                Fiche Feedback
                            </h1>
                        </div>
                       <div class="col-12 col-xl-auto mb-3">
                            <a class="btn btn-sm btn-light text-primary" href="{{ path('feedback_index') }}">
                                <i class="me-1" data-feather="arrow-left"></i>
                                Liste des Feedbacks                           
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main page content-->
        <div class="container-xl px-4 mt-4">
            <div class="row">
                <div class="col-xl-8">
                    <!-- Account details card-->
                    <div class="card mb-4">
                        <div class="card-header">Fiche Feedback</div>
                        <div class="card-body">
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <div class="col-md-4">
                                    <label class="small mb-1" for="inputFirstName">Client</label>
                                    <p><a class="text-muted me-3" href="{{ path('client_show',{'id' : feedback.Client.id }) }}">{{ feedback.Client.Name }} {{ feedback.Client.Lastname }}</a></p>
                                </div>
                                <div class="col-md-4">
                                    <label class="small mb-1" for="inputFirstName">Vehicule</label>
                                    {% if feedback.Vehicule %} <p><a class="text-muted me-3" href="{{ path('vehicule_show',{'id' : feedback.Vehicule.id }) }}">{{ feedback.Vehicule.Modele }} : {{ feedback.Vehicule.Matricule }}</a></p> {% endif %}
                                </div>
                                <div class="col-md-4">
                                    <label class="small mb-1" for="inputFirstName">Date</label>
                                    <p class=" mb-1" for="inputFirstName">{{ feedback.created_On }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-4">
                                    <label class="small mb-1" for="inputFirstName">Rating</label>
                                    <p class=" mb-1" for="inputFirstName">{{ feedback.Rating }}/5</p>
                                </div>
                                <div class="col-md-4">
                                    <label class="small mb-1" for="inputFirstName">Visible</label>
                                    <p class=" mb-1" for="inputFirstName">{{ feedback.Visible ? 'oui' : 'non' }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-12">
                                    <label class="small mb-1" for="inputFirstName">Body</label>
                                    <p class=" mb-1" for="inputFirstName">{{ feedback.Body }}</p>
                                </div>
                            </div>
                            <!-- Form Group (email address)-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
